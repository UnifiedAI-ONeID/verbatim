{
  "hosting": {
    "rewrites": [ 
      { 
        "source": "**", 
        "destination": "/index.html" 
      } 
    ], 
    "headers": [ 
      { 
        "key": "Cross-Origin-Opener-Policy", 
        "value": "same-origin" 
      }, 
      { 
        "key": "Cross-Origin-Embedder-Policy", 
        "value": "require-corp" 
      } 
    ],
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "dataconnect": {
    "source": "dataconnect"
  }
}
